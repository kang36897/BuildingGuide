<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tiger="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import
            alias="SearchActionModel"
            type="com.tiger.curious.guide.vmodel.SearchActionModel"/>

        <variable
            name="model"
            type="SearchActionModel"/>
    </data>


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/search_view"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:layoutMode="clipBounds"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/search_view"
            app:layout_constraintVertical_bias="0.501">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="16sp"
                tools:text="@string/area_floor_input"
                />

            <GridLayout
                android:id="@+id/panel_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="5"
                tiger:onItemClickListener="@{model}"
                tiger:gridEntities="@{SearchActionModel.NUMBER_KEYS}"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="16sp"
                tools:text="@string/area_company_input"
                />

            <GridLayout
                android:id="@+id/panel_char"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="5"
                tiger:gridEntities="@{SearchActionModel.ALPHABET_KEYS}"
                tiger:onItemClickListener="@{model}"
                />
        </LinearLayout>


    </android.support.constraint.ConstraintLayout>

</layout>